pipeline { 
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_id')
    }
     stages {
        stage('Build Docker Image') {
            steps { 
                sh 'docker build -t pyimage:1.0.1 .'
                }
            }
        stage('login to dockerhub'){
            steps {
            sh 'echo docker login'
            }
        }

        stage('push image'){
            steps {
                sh 'docker push pyimage:1.0.1'
            }
        }
    }
         post { 
            success { 
                echo "Build is successfull" 
            } 
            failure { 
                echo "Build failed" 
            }
        }
    }
